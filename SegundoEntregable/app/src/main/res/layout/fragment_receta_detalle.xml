<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    tools:context=".view.MainActivity"
    android:id="@+id/fragment_Receta_Detalle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<android.support.design.widget.CollapsingToolbarLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:id="@+id/fragmentDetalle_imageView"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/fragmentDetalle_textViewNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título Receta"
                    android:textSize="25dp"
                    android:gravity="center"
                    style="@style/Base.Widget.AppCompat.ActionButton.Overflow"/>

                <TextView
                    android:id="@+id/celdaReceta_TextIngredienteReceta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingredientes de la receta"
                    android:textSize="20dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/celdaReceta_TextPreparacionteReceta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preparación de la receta"
                    android:textSize="20dp"
                    android:gravity="center"/>


            </LinearLayout>

</android.support.design.widget.CollapsingToolbarLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>